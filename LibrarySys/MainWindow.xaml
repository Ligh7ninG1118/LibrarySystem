<Window x:Class="LibrarySys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibrarySys"
        mc:Ignorable="d"
        Title="Welcome" Height="500" Width="400" BorderThickness="0">
    <Grid>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Height="50" Margin="71,229,0,0" VerticalAlignment="Top" Width="253" FontSize="20" Click="btnLogin_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnRegi" Content="Register" HorizontalAlignment="Left" Height="50" Margin="71,297,0,0" VerticalAlignment="Top" Width="253" FontSize="20" Click="btnRegi_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnExit" HorizontalAlignment="Left" Height="50" Margin="71,367,0,0" VerticalAlignment="Top" Width="253" FontSize="20" Content="Exit" Click="btnExit_Click" Grid.ColumnSpan="2"/>
        <Image x:Name="imgWelcome" HorizontalAlignment="Left" Height="150" Margin="50,39,0,0" VerticalAlignment="Top" Width="300" Source="Resources/imgWel.jpg" Grid.ColumnSpan="2"  />
    </Grid>
</Window>
